<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/secondfrag_back"
    android:orientation="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:src="@mipmap/secondfrag_step_one"
            android:layout_width="228dp"
            android:layout_height="38dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/plus_button"
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                 />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:src="@drawable/plus_button" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:src="@drawable/plus_button"/>

        </LinearLayout>

        <ImageView
            android:src="@mipmap/secondfrag_step_two"
            android:layout_width="228dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="left"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="upload"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#999"
            android:typeface="sans"
            android:background="@drawable/buttonstyle"
            android:id="@+id/buttonUpload" />

        <ImageView
            android:src="@mipmap/secondfrag_step_three"
            android:layout_width="228dp"
            android:layout_height="38dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"/>

            <Button
                android:id="@+id/btn_start_bluetooth"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/buttonstyle"
                android:textColor="#999"
                android:text="SHARE TEMPER"
                android:typeface="sans" />


    </LinearLayout>

</LinearLayout>